

<%= form_for @photo, :html => { multipart: true, :class => "form-horizontal photo" } do |f| %>

<% if @photo.errors.any? %>

  <div id="error_expl" class="panel panel-danger">

    <div class="panel-heading">

      <h3 class="panel-title"><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h3>

    </div>

    <div class="panel-body">

      <ul>

      <% @photo.errors.full_messages.each do |msg| %>

        <li><%= msg %></li>

      <% end %>

        </ul>

    </div>

  </div>

  <% end %>

<div class="control-group">

  <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@photo[:name]) %>
</div>

<div class="control-group">
  <%= f.label :photo, :class => 'control-label' %>
  <div class="controls">
    <%= f.photos.attach :picture, accept: 'photo/jpeg,photo/gif,photo/png' %>
  </div>
  <%= error_span(@photo[:picture]) %>
</div>

<%= f.submit nil, :class => 'btn btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
photos_path, :class => 'btn btn-default' %>

<% end %>