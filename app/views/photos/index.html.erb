<div class="page-header"><h1>Photos</h1></div>

<div>
<% @photos.each do |photo| %>
  <div class="media-left col-md-3">
    <% photo.images.each do |image|%>
        <%= link_to(image_tag(image, width:250, height: 150), image) %>
        <%= image.record.name %>
        <div>
          <%= link_to 'delete picture', photo_path(photo), class: "btn btn-xs btn-danger",
            method: :delete, data: {confirm: "Are you sure you want to delete #{image.filename}"} %>
        </div>
    <% end %>
  </div>
  <div class="media-left col-xs-1"></div> 
  <% end %>
</div>

