<div align="center">
<h3>Search for A User</h3>
<div id="stock-lookup">
  <%= form_tag users_path, method: :get do %>
    <div class="form-group row no-padding text-center col-md-9">
      <div class="col-md-10">
        <%= text_field_tag 'term', params[:term], placeholder: "Enter user's email", class: 'form-control search-box input-lg' %>
        </div>
      <div class="col-md-2">
        <%= submit_tag 'Search!', class: 'btn btn-lg btn-success' %>
        </div>
  <% end %>
</div>

  
<% @users.each do |user| %>
  <div class="well col-md-9">
    <span class="col-md-4"><%= link_to user.email, user_url(user) %></span>
    <span class="col-md-4 col-md-offset-4 btn btn-info"> <%= link_to 'Pictures', user_pictures_path(user)%></span>
  </div>

<% end %>

</div>